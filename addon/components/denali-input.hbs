<div class="input
  {{this.hasIconFrontClass}}
  {{this.hasIconBackClass}}
  {{this.inverseClass}}
  {{this.sizeClass}}
  {{this.activeClass}}
  {{this.errorClass}}
  {{this.wrapperClass}}
  "
>
  {{#if @iconFront}}
    <span class="d-icon d-{{@iconFront}} {{this.iconFrontClass}}"></span>
  {{/if}}
  <input ...attributes>
  {{#if @iconBack}}
    <span class="d-icon d-{{this.iconBack}} {{this.iconBackClass}}"></span>
  {{/if}}

  {{#if this.errorMsg}}
    <p class="message">{{this.errorMsg}}</p>
  {{/if}}
</div>