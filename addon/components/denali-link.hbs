{{!-- template-lint-disable link-href-attributes --}}
<a class="denali-link
  {{@class}}
  {{this.activeClass}}
  {{this.disabledClass}}
  {{this.hasIconBackClass}}
  {{this.hasIconFrontClass}}
  {{this.secondaryClass}}
  {{this.sizeClass}}
  {{this.isSubClass}}"
  ...attributes
>
  {{#if this.iconFront}}
    <DenaliIcon class={{this.iconFrontClass}} @icon={{this.iconFront}}/>
  {{/if}}

  {{yield}}

  {{#if this.iconBack}}
    <DenaliIcon class={{this.iconBackClass}} @icon={{this.iconBack}}/>
  {{/if}}
</a>